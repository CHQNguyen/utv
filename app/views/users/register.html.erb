<h2>Register</h2>
  <% if @errors %>
    <% @errors.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>
  <%= form_for @user, url: user_register_path do |f| %>
    <%= f.label "Full Name:" %>
    <%= f.text_field :full_name  %>
    <%= f.label "E-Mail:" %>
    <%= f.text_field :email %>
    <%= f.label "Password:" %>
    <%= f.password_field :password %>
    <%= f.label "Verify Password:" %>
    <%= f.password_field :verify_password %>
    <%= f.submit %>
  <%end%>
