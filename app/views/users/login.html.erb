<h2>Login</h2>
  <% if @errors %>
    <% @errors.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

<%= form_for :user, url: user_login_path do |f| %>
<%= f.label "E-Mail:" %>
    <%= f.text_field :email %>
<%= f.label "Password:" %>
    <%= f.password_field :password %>
<%= f.submit %>
  <%end%>
